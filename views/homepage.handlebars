<body>
    <div class="main-grid">
      <div class="nav-cont">
        <nav class="nav">
          <a href="#" class="about">About Us</a>
          <a href="#" class="login" role="navoption">Log In</a>
          <a href="#" class="ac-btn" role="navoption">Sign Up</a>
        </nav>
      </div>
      <div class="slogan">
        <h1 class="s-text">
          <h1 class="title">
            Need some Werk done?<br />How about a Job?<br />JobWerk is here to
            help!
          </h1>
        </h1>
      </div>
      <div class="ind-cont">
        <h2 class="tile-title">Select an Industry</h2>
        <div class="elec-tile">
          Electrical
          <div class="elec-btn"></div>
        </div>
        <div class="pnt-tile">
          Painting
          <div class="pnt-btn"></div>
        </div>
        <div class="plm-tile">
          Plumbing
          <div class="plm-btn"></div>
        </div>
        <div class="crp-tile">
          Carpentry
          <div class="crp-btn"></div>
        </div>
      </div>
      <div class="res-cont">
        <div class="results">Job Title 1</div>
        <ol class="job-list">
          {{#each jobs as |job|}}
            <li>
              {{> job-info job }}
            </li>
          {{/each}}
        </ol>
      </div>
      <div class="ratings">Got feedback for a customer or worker?</div>
    </div>
  </body>